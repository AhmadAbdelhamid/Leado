<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        >

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

    >

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp"
                >

            <androidx.recyclerview.widget.RecyclerView android:layout_width="wrap_content"
                                                       android:layout_marginTop="64dp"
                                                       android:id="@+id/rvVisualLessons"
                                                       android:layout_marginStart="16dp"
                                                       android:layout_marginEnd="16dp"
                                                       app:layout_collapseMode="parallax"
                                                       android:nestedScrollingEnabled="false"
                                                       android:layout_gravity="center"
                                                       android:layout_marginBottom="24dp"
                                                       android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin">

                <LinearLayout android:layout_width="match_parent" android:layout_height="80dp"
                              android:orientation="vertical"
                              app:layout_collapseMode="parallax">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textAlignment="center"
                              style="@style/Headline1"
                              android:fontFamily="@font/rubik_black"
                              android:lineSpacingMultiplier="1.22"
                              android:lines="1"
                              android:layout_marginEnd="16dp"
                              android:layout_marginStart="16dp"
                              android:layout_marginTop="8dp"
                              android:text="@string/awareness_room"/>
                    <com.badoualy.stepperindicator.StepperIndicator
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            app:stpi_circleColor="@color/colorDisabled"
                            app:stpi_indicatorColor="@color/colorAccent"
                            app:stpi_lineColor="@color/colorDisabled"
                            app:stpi_lineDoneColor="@color/colorAccent"
                            app:stpi_stepCount="5"/>


                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      style="@style/Headline1"
                      android:fontFamily="@font/rubik_black"
                      android:lineSpacingMultiplier="1.22"
                      android:lines="1"
                      android:layout_marginTop="8dp"
                      android:text="@string/self_awareness"/>
            <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                       android:layout_marginTop="16dp"
                                                       android:id="@+id/rvLessons"
                                                       android:nestedScrollingEnabled="false"
                                                       android:layout_marginStart="16dp"
                                                       android:layout_marginBottom="16dp"
                                                       android:layout_height="wrap_content"/>
        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>