<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_journey"
    app:startDestination="@id/journey"
    >
    <fragment
        android:id="@+id/journey"
        android:name="com.leado.ui.journey.JourneyFragment"
        android:label="Journey"
        tools:layout="@layout/fragment_journey"
        >
        <action
            android:id="@+id/action_journey_to_lessonFragment"
            app:destination="@id/lessonFragment"
            app:enterAnim="@anim/ib_core_anim_slide_in_right"
            app:exitAnim="@anim/ib_core_anim_slide_out_left"
            app:popEnterAnim="@anim/ib_core_anim_slide_in_left"
            app:popExitAnim="@anim/ib_core_anim_slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/lessonFragment"
        android:name="com.leado.ui.lesson.LessonVideoFragment"
        android:label="LessonFragment"
        tools:layout="@layout/fragment_lesson">
        <argument
            android:name="lesson"
            app:argType="com.leado.model.Lesson" />
        <action
            android:id="@+id/action_lessonFragment_to_congratsFragment"
            app:destination="@id/congratsFragment"
            app:enterAnim="@anim/ib_core_anim_slide_in_right"
            app:exitAnim="@anim/ib_core_anim_slide_out_left"
            app:popEnterAnim="@anim/ib_core_anim_slide_in_left"
            app:popExitAnim="@anim/ib_core_anim_slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/congratsFragment"
        android:name="com.leado.ui.congrats.CongratsFragment"
        android:label="CongratsFragment"
        tools:layout="@layout/fragment_congrats"
        />
</navigation>